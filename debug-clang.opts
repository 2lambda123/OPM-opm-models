CXX_WARNING_OPTS=" \
    -Wall \
    -Wunused \
    -Wno-tautological-compare \
    -Wno-overloaded-virtual \
    -Wno-cast-align"

CXX_OPTS=" \
    -fno-strict-aliasing \
    -fstrict-overflow \
    -g \
    -DDEBUG=1"

CONFIGURE_FLAGS="\
  CC=\"clang\" \
  CXX=\"clang++\" \
  CXXFLAGS=\"$CXX_WARNING_OPTS $CXX_OPTS\" \
  --disable-documentation \
  --enable-fieldvector-size-is-method \
  --disable-parallel \
  --disable-mpiruntest"
